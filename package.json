{
  "name": "nexus",
  "version": "0.1.0",
  "description": "Autonomous AI application builder that transforms ideas into production-ready applications",
  "type": "module",
  "main": "dist/main.js",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsup src/main.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:status": "tsx src/scripts/db-status.ts",
    "doctor": "tsx src/scripts/doctor.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/genai": "^1.35.0",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^3.6.0",
    "drizzle-orm": "^0.38.3",
    "execa": "^9.5.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "nanoid": "^5.0.9",
    "pathe": "^1.1.2",
    "simple-git": "^3.27.0",
    "tree-kill": "^1.2.2",
    "uuid": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.49.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.7",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.18.0",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "ai",
    "automation",
    "code-generation",
    "electron",
    "multi-agent"
  ],
  "author": "Omar",
  "license": "MIT"
}
