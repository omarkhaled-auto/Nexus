{
  "name": "nexus",
  "version": "0.1.0",
  "description": "Autonomous AI application builder that transforms ideas into production-ready applications",
  "type": "module",
  "main": "out/main/index.js",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "dev:electron": "electron-vite dev",
    "build": "tsup src/main.ts",
    "build:electron": "electron-vite build",
    "preview:electron": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:status": "tsx src/scripts/db-status.ts",
    "doctor": "tsx src/scripts/doctor.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/genai": "^1.35.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^3.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.38.3",
    "electron-store": "^11.0.2",
    "execa": "^9.5.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.0.9",
    "pathe": "^1.1.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.12.0",
    "react-virtuoso": "^4.18.1",
    "recharts": "^3.6.0",
    "simple-git": "^3.27.0",
    "tailwind-merge": "^3.4.0",
    "tree-kill": "^1.2.2",
    "tw-animate-css": "^1.4.0",
    "uuid": "^13.0.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.7",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.23",
    "drizzle-kit": "^0.30.2",
    "electron": "^39.2.7",
    "electron-vite": "^5.0.0",
    "eslint": "^9.18.0",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
